{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/kalmantest.cpp",
                "${workspaceFolder}/pid.cpp",
                "${file}",
                "-std=c++11",
                "-o",  
                "${fileBasenameNoExtension}.out",
                "-I", "/usr/local/include",
                "-I", "/usr/local/include/opencv4",
                "-I", "/usr/local/include/opencv2",
                "-L", "/usr/local/lib",
                "-l", "opencv_core",
                "-l", "opencv_features2d",
                "-l", "opencv_dnn",
                "-l", "opencv_calib3d",
                "-l", "opencv_imgproc",
                "-l", "opencv_imgcodecs",
                "-l", "opencv_video",
                "-l", "opencv_ml",
                "-l", "opencv_highgui",
                "-l", "opencv_objdetect",
                "-l", "opencv_flann",
                "-l", "opencv_imgcodecs",                             
                "-l", "opencv_stitching",
                "-l", "opencv_photo",
                "-l", "opencv_videoio"
            ],
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}
